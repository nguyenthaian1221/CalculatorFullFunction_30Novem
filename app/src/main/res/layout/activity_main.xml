<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:background="#a6dfdfdf"

    android:orientation="vertical"
    android:weightSum="7">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical"
        android:weightSum="5">

        <TextView
            android:id="@+id/tv_pheptoan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_weight="1.5"
            android:background="@color/background_textfield"
            android:gravity="center_vertical|right"
            android:paddingEnd="5dp"
            android:textColor="@color/numbercolortextfiled"
            android:textSize="25dp"
            android:typeface="sans"


            />

        <TextView
            android:id="@+id/tv_inputvaketqua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|right"
            android:layout_weight="3.5"
            android:background="@color/background_textfield"
            android:gravity="center_vertical|right"

            android:paddingEnd="5dp"
            android:text=""
            android:textColor="@color/numbercolortextfiled"
            android:textSize="45dp"
            android:textStyle="bold"
            android:typeface="sans" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:padding="0dp"
        android:weightSum="5">


        <!--layer 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:weightSum="4">


            <Button
                android:id="@+id/btn_ce"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:paddingTop="4dp"
                android:text="CE"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btn_c"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:text="C"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_bs"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:text="BS"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_divide"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:text="/"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

        </LinearLayout>

        <!--layer 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:weightSum="4">


            <Button
                android:id="@+id/btn_7"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:paddingTop="4dp"
                android:text="7"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btn_8"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:text="8"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_9"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:text="9"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_multiply"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:text="x"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

        </LinearLayout>
        <!--layer 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:weightSum="4">


            <Button
                android:id="@+id/btn_4"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:paddingTop="4dp"
                android:text="4"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btn_5"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:text="5"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_6"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:text="6"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_minus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:text="-"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

        </LinearLayout>
        <!--layer 4 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:weightSum="4">


            <Button
                android:id="@+id/btn_1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:paddingTop="4dp"
                android:text="1"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btn_2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:text="2"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:text="3"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:text="+"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

        </LinearLayout>
        <!--layer 5 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="horizontal"

            android:weightSum="4">


            <Button
                android:id="@+id/btn_negative"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:paddingTop="4dp"
                android:text="+/-"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btn_0"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btnonlynumber"
                android:padding="0dp"
                android:text="0"
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_point"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:text="."
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:backgroundTint="@color/background_btncolorspecial"
                android:padding="0dp"
                android:text="="
                android:textColor="@color/colornumberbtn"
                android:textSize="20dp" />

        </LinearLayout>


    </LinearLayout>
</LinearLayout>